<header>
    <div class="top-header"> 
        <div class="burguer-menu burguer-menu-closed">
            <button type="menu" class="burguer-menu-button"><i class="fa-solid fa-seedling"></i></button>
            <div class="contenido contenido-closed" >
                <ul>
                    <li><a href="/products">Lista de Productos </a></li>
                    <li><a href="/#us">Nosotros <i class="fas fa-question-circle"></i></a></li>
                    <% if (locals.userLogged && userLogged.category_id == "2"){ %>
                        <li><a href="/products/create">Crear Producto <i class="fas fa-dollar-sign"></i></a></li>
                        <li><a href="https://dashboard-veoverde.herokuapp.com/" target="_blank">Dashboard <i class="fas fa-store"></i></a></li>
                    <% } %>
                </ul>
                <ul>
                    <% if(locals.isLogged) { %>
                        <li><a href="/users/profile">Mi perfil</a></li>
                        <li><a href="/users/logout">Cerrar Sesion</a></li>                
                    <% } else { %>
                        <li><a href="/users/register">Creá tu cuenta <i class="far fa-id-card"></i></a></li>
                        <li><a href="/users/login">Ingresá <i class="fas fa-sign-in-alt"></i></a></li>
                    <% } %>
                </ul>
            </div>
        </div>
        <div class="header-logo">
            <a href="/"><img src="/images/brand-images/veoverde-nombre_Blanco.png" alt="veoverde-nombre"></a>
        </div>
        <div class="shopping-cart">
            <a href="/products/productCart"><i class="fas fa-shopping-cart"></i></a>
        </div>
        <form action="/products/search" method="POST" class="header-search-form">
            
                <input type="text" name="name" placeholder="¿Qué estás buscando?">
                <button class="submit"><i class="fa fa-search"></i></button>
    
        </form>
    </div>

    <nav>
        <ul>
           <!-- <li><a href="#">Ofertas  <i class="fas fa-tags"></i></a></li> -->
            <li><a href="/products">Lista de Productos <i class="fas fa-store"></i></a></li>
            <li><a href="/#us">Nosotros <i class="fas fa-question-circle"></i></a></li>
            
            <% if (locals.userLogged && userLogged.category_id == "2"){ %>
                <li><a href="/products/create">Crear Producto <i class="fas fa-dollar-sign"></i></a></li>
                <li><a href="https://dashboard-veoverde.herokuapp.com/" target="_blank">Dashboard <i class="fas fa-store"></i></a></li>
            <% } %>            
        </ul>
        <ul>
            <% if(locals.isLogged) { %>
                <li class="hello"><a href="#">Hola, <%= (locals.userLogged.firstName + " " + locals.userLogged.lastName) %></a></li>
                <li><a href="/users/profile"><img src="/images/users/<%= userLogged.image %>" style="width: 17.5px; border-radius: 10px; position: relative; top: 2px; background-color: white;" alt="">  Mi perfil</a></li>
                <li><a href="/users/logout">Cerrar Sesion</a></li>                
            <% } else { %>
                <li><a href="/users/register">Creá tu cuenta <i class="far fa-id-card"></i></a></li>
                <li><a href="/users/login">Ingresá <i class="fas fa-sign-in-alt"></i></a></li>
            <% } %>
        </ul>
    </nav>
</header>
<script src="/js/burguer-menu.js"></script>