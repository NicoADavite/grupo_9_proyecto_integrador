<!DOCTYPE html>
<html lang="en">
<head>
    <!-- partial del head -->
    <%- include("../partials/head") %>
    <link rel="stylesheet" href="/css/login.css">
    <title>Log In | VEOVERDE</title>
</head>
<body>

    <!-- partial del header -->
    <%- include("../partials/header") %>

    <main>

        <div class= "go-back">
            <p><a href="/">Inicio</a></p> >> Login
         </div> 
 

        <form action="/users/login" method="POST" class="login-form">

            <h2>INICIAR SESION</h2>

            <div class= "div-login-form" class="login-form-usuario">
                <label for="usuario">Correo electrónico:</label>
                <input type="text" name="email" value="<%= locals.oldData ? oldData.email : null %>" placeholder="Ej: usuario@gmail.com">
                <% if (locals.errors && errors.email) { %>
                    <div style="color: red;">
                      <%= errors.email.msg %> 
                    </div>
                <% } %>
            </div>

            <div class= "div-login-form" class="login-form-password">
                <label for="password">Contraseña:</label>
                <input type="password" name="password" id="password">   
                <% if (locals.errors && errors.password) { %>
                    <div style="color: red;">
                      <%= errors.password.msg %> 
                    </div>
                <% } %>
            </div>

            <div class="login-form-show-password" style="margin-bottom: 15px;">
                <input type="checkbox" onclick="showPassword()">  
                <p style="display: inline;">Mostrar Contraseña</p>   
                <script>
                function showPassword() {
                  let x = document.getElementById("password");
                  if (x.type === "password") {
                    x.type = "text";
                  } else {
                    x.type = "password";
                  }
                }
                </script>
            </div>

            <!-- FALTA DEFINIR FUNCIONALIDAD
            <div class="login-forgot-password">
                <button>¿Olvidaste la contraseña?</button>
            </div>
            -->
            
            <div class= "div-login-form" style="border: 1px solid darkorange; width: 15%; margin: auto;padding: 5px; border-radius: 10px; ">
                <input type="checkbox"  name="remember_user">  Recordar mi usuario
            </div>

            <div class="login-button" >
                <button type="submit">INICIAR SESION</button>
            </div>
            <div class="login-not-account">
                <a href="/users/register">¿Aún no tienes cuenta? <b>Crea tu Cuenta</b></a>
            </div>

        </form>

    </main>

    <!-- partial del header -->
    <%- include("../partials/footer") %>

</body>
</html>