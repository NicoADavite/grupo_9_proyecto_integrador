<!DOCTYPE html>
<html lang="en">
<head>
   <!-- partial del head -->
   <%- include("../partials/head") %>
   <link rel="stylesheet" href="/css/product-edit.css">
   <title>Edicion de Producto | VEOVERDE</title>
</head>
<body>

    <!-- partial del header -->
    <%- include("../partials/header") %>

    <main>
        <div class= "go-back">
           <p><a href="/">Inicio</a></p> >> Editar
        </div> 


        <section class="our-products main-section">

            <div class="our-products-title">
                <h2>Edici√≥n del Producto: <% product.name %> </h2>
            </div>

            <form action="/products/edit/<% product.id %>?_method=PUT" method="PUT">

            </form>
            <div class="products">
                <article class="<%= product.class %>  product-article">
                    <figure class="product-article-img">
                        <img src="/images/<%= product.img %>" alt="<%= product.title %>">
                        <div class="img-edit">
                            <label for="user_email-confirmation"></label>
                            <input type="file" name="user_email-confirmation" id="user_email-confirmation">
                        </div>
                    </figure>
 

                    <div class="product-article-details">
                        <h4 class="product-article-description"><%= product.title %></h4>

                        <div class="product-title-edit">
                            <label for="user_name-surname"></label>
                            <input type="text" name="user_name-surname" id="user_name-surname" placeholder="<%= product[i].title %>"> 
                        </div>

                        <div>
                            <h6 class="product-description"><%= product.description %></h6>
                        </div>

                        <div class="product-description-edit">
                            <label for="user_email"></label>
                            <input type="email" name="user_email" id="user_email" placeholder="<%= product[i].description %>"> 
                        </div>

                        <p class="product-article-price"><%= product.price %></p>

                        <div class="price-edit">
                            <label for="user_password-confirmation"></label>
                            <input type="text" name="user_password-confirmation" id="user_password-confirmation" placeholder="<%= product[i].price %>">
                        </div>
                    </div>                                               
                    <div class="product-article-button">
                        <button class="product-article-edit-button">EDITAR<i class="far fa-edit"></i></button>
                        <button class="product-article-trash-button">ELIMINAR<i class="fas fa-trash-alt"></i></button>
                    </div>
                </article>
            </div>
        </section>

    </main>
    
    <!-- partial del footer -->
    <%- include("../partials/footer") %>

</body>
</html>
